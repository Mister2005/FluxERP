# FluxERP Environment Variables Example
# Copy to .env and fill in your values

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=fluxerp

# Full database URL (used by backend)
DATABASE_URL=postgresql://postgres:your-secure-password-here@localhost:5432/fluxerp?schema=public

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=development
PORT=5001

# ===========================================
# Security
# ===========================================
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ===========================================
# AI Configuration (Optional)
# ===========================================
# Get your API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# ===========================================
# Email Configuration (Optional)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=FluxERP <noreply@fluxerp.com>

# ===========================================
# Frontend Configuration
# ===========================================
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:5001

# ===========================================
# Production Only - Traefik/SSL
# ===========================================
# DOMAIN=fluxerp.example.com
# ACME_EMAIL=admin@example.com
# TRAEFIK_USERS=admin:$apr1$xyz...  # htpasswd -nB admin

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=info
