{
    "name": "fluxerp-backend",
    "version": "2.0.0",
    "description": "FluxERP Backend API with AI capabilities - Scalable Architecture",
    "main": "dist/server.js",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "dev:new": "tsx watch src/server.new.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:studio": "prisma studio",
        "db:seed": "tsx prisma/seed.ts",
        "lint": "eslint src/**/*.ts",
        "typecheck": "tsc --noEmit",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
        "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
    },
    "dependencies": {
        "@google/generative-ai": "^0.21.0",
        "@prisma/client": "^6.1.0",
        "bcryptjs": "^2.4.3",
        "bullmq": "^5.67.2",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.2",
        "express-rate-limit": "^7.5.0",
        "groq-sdk": "^0.37.0",
        "helmet": "^8.0.0",
        "jsonwebtoken": "^9.0.2",
        "multer": "^2.0.2",
        "nodemailer": "^7.0.13",
        "ollama": "^0.6.3",
        "papaparse": "^5.5.3",
        "pino": "^9.5.0",
        "pino-pretty": "^13.0.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^13.0.0",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/multer": "^2.0.0",
        "@types/node": "^20",
        "@types/nodemailer": "^7.0.9",
        "@types/papaparse": "^5.5.2",
        "@types/supertest": "^6.0.3",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/uuid": "^10.0.0",
        "jest": "^30.2.0",
        "prisma": "^6.1.0",
        "supertest": "^7.2.2",
        "ts-jest": "^29.4.6",
        "tsx": "^4.19.2",
        "typescript": "^5"
    },
    "prisma": {
        "seed": "tsx prisma/seed.ts"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
